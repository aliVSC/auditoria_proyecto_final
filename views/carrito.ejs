<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Carrito de Compras</title>
  <link rel="stylesheet" href="/css/estilos.css">
</head>
<body>
  <header><h1>AUTHENTIC</h1></header>
  <h2>Tu carrito</h2>

  <% if (carrito.length === 0) { %>
    <p style="text-align:center;">El carrito está vacío</p>
  <% } else { %>
    <table style="margin:auto; border-collapse: collapse; width: 80%;">
      <thead>
        <tr style="background-color: #000; color: white;">
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Precio</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0; %>
        <% carrito.forEach(p => { 
             let subtotal = p.precio * p.cantidad;
             total += subtotal;
        %>
          <tr>
            <td><%= p.nombre %></td>
            <td><%= p.cantidad %></td>
            <td>$<%= p.precio.toFixed(2) %></td>
            <td>$<%= subtotal.toFixed(2) %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <h3 style="text-align:center;">Total: $<%= total.toFixed(2) %></h3>
  <% } %>

  <div class="botones-navegacion">
    <a href="/productos" class="boton">Seguir comprando</a>
    <a href="/checkout" class="boton">Finalizar compra</a>
  </div>

  <footer><p>© 2025 AUTHENTIC</p></footer>
</body>
</html>
